
{% extends "ShirukizMangaBundle::layout.html.twig" %}
{% block body %}
    
         {% for plateform in listePlateforme %}
        <div id="Accueil">     
         <h1>{{ plateform.nom }} <a  href="#modal1" id="test" class="modal-trigger">
                <img src="../bundles/img/Ajouter.png" alt="Modifier" id="Logo" style="float:right;width: 4%;"/>
            </a></h1>
         {% for jeux in listejeux %}
             {% if jeux.plateforme == plateform.nom %}
                 {{ include("ShirukizMangaBundle:Jeux:AffichageJeux.html.twig") }}
             {% endif %} 

         {% endfor %}
        </div>
         {% endfor %}
         <div id="Accueil"> 
             Nouvelle plateforme ? <a  href="#modal2" id="plateform" class="modal-trigger">
                <img src="../bundles/img/Ajouter.png" alt="Modifier" id="Logo" style="float:right;width: 4%;"/>
            </a>
         </div>
        
    <div id="modal1" class="modal">
        <div class="modal-content">
          <h1>Ajouter un jeu !</h1>
            {{ form(form)}}
        </div>
        <div class="modal-footer">
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
        </div>
      </div>
        
    <div id="modal2" class="modal">
        <div class="modal-content">
          <h1>Ajouter une plateforme !</h1>
            {{ form(form2)}}
        </div>
        <div class="modal-footer">
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Fermer</a>
        </div>
      </div>    


     <script type="text/javascript">
        
 (function ($) {
    $(function () {

        //initialize all modals           
        $('.modal').modal();

        //now you can open modal from code
        

        //or by click on trigger
        $('.trigger-modal').modal();

    }); // end of document ready
})(jQuery);

    $('#test').click(function() {
        $('#modal1').modal('open');
    });
    
    $('#plateform').click(function() {
        $('#modal2').modal('open');
    });
    </script>     
    
    
{% endblock %}

